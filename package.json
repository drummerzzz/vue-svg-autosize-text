{
	"name": "vue-svg-autosize-text",
	"version": "0.0.1",
	"description": "A vue-directive for svg text elements enabling wrapping and auto size text",
	"main": "dist/index.js",
	"files": [
		"src",
		"dist/*.js"
	],
	"scripts": {
		"dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"build": "npm run prod && npm run prod-min && npm run prod-pf && npm run prod-pf-min",
		"prod": "babel -o dist/index.js -s true --no-comments src/index.js",
		"prod-min": "babel --minified -o dist/index.min.js -s true --no-comments src/index.js",
		"prod-pf": "babel -o dist/index.pf.js -s true --no-comments src/index.js",
		"prod-pf-min": "babel --minified -o dist/index.pf.min.js -s true --no-comments src/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/drummerzzz/vue-svg-autosize-text"
	},
	"bugs": {
		"url": "https://github.com/drummerzzz/vue-svg-autosize-text/issues"
	},
	"homepage": "https://github.com/drummerzzz/vue-svg-autosize-text#readme",
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"keywords": [
		"vue",
		"vuejs",
		"svg",
		"text",
		"wrapping",
		"autosize"
	],
	"typings": "src/index.d.ts",
	"author": "Jo√£o Filho Drummer",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.3.3",
		"@babel/preset-env": "^7.3.1",
		"browser-sync": "^2.26.3",
		"browser-sync-webpack-plugin": "^2.2.2",
		"core-js": "^2.6.5",
		"cross-env": "^7.0.0",
		"innersvg-polyfill": "0.0.2",
		"laravel-mix": "^4.0.15",
		"vue": "^2.6.6",
		"vue-template-compiler": "^2.6.6"
	}
}
